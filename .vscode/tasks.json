{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build ROOT C++ Program",
        "type": "shell",
        "command": "g++",
        "args": [
          "-stdlib=libc++",
          "-pthread",
          "-std=c++17",
          "-m64",
          "-I/opt/homebrew/Cellar/root/6.32.06/include/root",  // Include directory for ROOT
          "${file}",                                           // Source file to compile
          "-L/opt/homebrew/Cellar/root/6.32.06/lib/root",      // Linker directory for ROOT libraries
          "-lCore", "-lImt", "-lRIO", "-lNet", "-lHist", "-lGraf", "-lGraf3d", "-lGpad", "-lROOTVecOps", "-lTree",
          "-lTreePlayer", "-lRint", "-lPostscript", "-lMatrix", "-lPhysics", "-lMathCore", "-lThread", "-lMultiProc", "-lROOTDataFrame",
          "-Wl,-rpath,/opt/homebrew/Cellar/root/6.32.06/lib/root", // Runtime library path for ROOT
          "-o", "${fileDirname}/${fileBasenameNoExtension}",  // Output executable
          "-lm", "-ldl", "-lpthread"                         // Additional libraries (math, dynamic loading, threads)
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Build C++ program with ROOT"
      }
    ]
  }